<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/search_champion"
            android:layout_width="150dp"
            android:layout_height="50dp"
            />
        <Button
            android:id="@+id/confirm_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/search_champion"
            android:text="Select Champion"
            />
        <Button
            android:id="@+id/save_build"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/confirm_search"
            android:text="Save Build"
            />
        <ImageView
            android:id="@+id/selected_champion"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/search_champion"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="15dp"/>
        <TextView
            android:id="@+id/champion_display"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/selected_champion"
            android:layout_toLeftOf="@+id/item3"
            android:textStyle="bold"
            android:textSize="32sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:id="@+id/item0"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/selected_champion"
            android:layout_below="@+id/confirm_search"
            android:background="@drawable/background"/>
        <ImageView
            android:id="@+id/item1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/item0"
            android:layout_below="@+id/confirm_search"
            android:background="@drawable/background"/>
        <ImageView
            android:id="@+id/item2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/item1"
            android:layout_below="@+id/confirm_search"
            android:background="@drawable/background"/>
        <ImageView
            android:id="@+id/item3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/item0"
            android:layout_toRightOf="@+id/selected_champion"
            android:background="@drawable/background"/>
        <ImageView
            android:id="@+id/item4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/item3"
            android:layout_below="@+id/item1"
            android:background="@drawable/background"/>
        <ImageView
            android:id="@+id/item5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/item4"
            android:layout_below="@+id/item2"
            android:background="@drawable/background"/>

            <TextView
                android:id="@+id/q_skill"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@android:color/holo_blue_dark"
                android:layout_below="@+id/item3"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/w_skill"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@android:color/holo_blue_dark"
                android:layout_below="@+id/q_skill"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/e_skill"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@android:color/holo_blue_dark"
                android:layout_below="@+id/w_skill"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="13sp"/>
            <TextView
                android:id="@+id/r_skill"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/frame"
                android:layout_below="@+id/e_skill"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="13sp"/>
</RelativeLayout>
</ScrollView>
